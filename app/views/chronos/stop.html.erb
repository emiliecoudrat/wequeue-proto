<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="chrono-stop">
        <p class="line-name"><%= link_to @chrono.line.place.name, line_path(@chrono.line), class: "link-scred" %></p>
        <div class="waiting-since">
          <p>
            <%= t '.waiting-since', default: "Vous attendez depuis" %>
            <div id="timer-frame">
              <div id="timer">
                <span id="hours"><%= @chrono.hours %></span>:<span id="minutes"><%= @chrono.minutes.to_s.size == 1 ? "0" + @chrono.minutes.to_s : @chrono.minutes %></span>:<span id="seconds"><%= @chrono.seconds.to_s.size == 1 ? "0" + @chrono.seconds.to_s : @chrono.seconds %></span>
              </div>
            </div>
          </p>
        </div>
        <div class="actions">
          <div class="row">
            <div class="col-xs-12">
              <%= link_to t('.confirm', default: "OUI,<br>je valide".html_safe), equivalence_chrono_path(@chrono), class: "btn btn-green" %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-4 no-padding">
              <%= link_to t('.manual', default: "NON, j'ajuste"), edit_chrono_path(@chrono), class: "btn btn-orange" %>
            </div>
            <div class="col-xs-4 no-padding">
              <%= link_to t('.manual', default: "EUH, j'ai abandonnÃ©"), quit_chrono_path(@chrono), class: "btn btn-red" %>
            </div>
            <div class="col-xs-4 no-padding">
              <%= link_to t('.oups', default: "OUPS, j'ai pas fini"), restart_chrono_path(@chrono), class: "btn btn-gray" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>