<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="line-show">
        <p class="line-name"><%= @line.place.name %></p>
        <% if @line.waiting_time %>
        <% else %>
          <p class="line-info">
            <%= t '.no_info', default: "Nous n'avons pas assez d'information pour estimer le temps d'attente actuel." %>
          </p>
          <div class="outer-circle">
            <div class="inner-circle">
              ?
            </div>
          </div>
        <% end %>
        <div class="chronos-stream">
          <% @chronos.each  do |chrono| %>
            <div class="chrono">
              <div class="row">
                <div class="col-xs-4 text-left">
                  <div class="user-name">
                    <%= chrono.user.first_name.upcase %>
                  </div>
                  <div class="user-avatar">
                    <%= image_tag chrono.user.picture %>
                  </div>
                </div>
                <div class="col-xs-8 text-right">
                  <div class="date">
                    <%= t '.date', default: "Date : " %><%= l chrono.created_at, format: '%d %B %Y' %>
                  </div>
                  <div class="checkin">
                    <%= t '.checkin', default: "Checkin : " %><%= l chrono.created_at, format: '%Hh%M' %>
                  </div>
                  <div class="since">
                    <%= t '.since', default: "Dans la queue depuis : " %><%= l chrono.created_at, format: '%Hh%M' %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<footer>
  <% unless @line.waiting_time %>
    <div class="popup-helper slideDown">
      <a class="close-white"><span>&times;</span></a>
      <%= t '.signal', default: "Signalez-vous dans la file d'attente." %>
    </div>
  <% end %>
  <%= link_to authenticated_root_path do %>
    <%= image_tag 'small-loupe-icon.png', class: "search-left" %>
  <% end %>
  <%= form_for @chrono do |f| %>
    <%= image_tag 'step-button.png', class: "steps-center", id: "launch-timer" %>
    <%= f.submit 'launch', class: 'hidden' %>
  <% end %>
</footer>